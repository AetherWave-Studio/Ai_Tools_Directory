modules = ["python-3.12", "nodejs-20", "web"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AIverse Frontend"

[[workflows.workflow]]
name = "AIverse Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd aiverse && pnpm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 39503
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd aiverse && pnpm install && pnpm run preview --host 0.0.0.0 --port 5000"]
build = ["bash", "-c", "cd aiverse && pnpm install && pnpm run build:prod"]
